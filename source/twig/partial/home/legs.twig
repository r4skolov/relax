<div class="legs section-offset">
	<div class="container">
		<div class="legs__wrapper">
			<div class="legs__wrap">
				<div class="legs__head">
					<div class="legs__group">
						{% if legsCount %}
							<div class="legs__count">
								{{ legsCount }}
							</div>
						{% endif %}
						{% if legsText %}
							<div class="legs__text">
								{{ legsText }}
							</div>
						{% endif %}
					</div>
					<div class="swiper-nav swiper-nav--legs">
						<div class="legs-slider-prev swiper-button swiper-button-prev">
							<svg width="16" height="16" viewBox="0 0 16 16" fill="none"
							     xmlns="http://www.w3.org/2000/svg">
								<path d="M12.6668 8L3.3335 8M3.3335 8L7.3335 12M3.3335 8L7.3335 4" stroke="white"
								      stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<div class="legs-slider-next swiper-button swiper-button-next">
							<svg width="16" height="16" viewBox="0 0 16 16" fill="none"
							     xmlns="http://www.w3.org/2000/svg">
								<path d="M3.33317 8L12.6665 8M12.6665 8L8.6665 4M12.6665 8L8.6665 12" stroke="white"
								      stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
					</div>
				</div>
				<div class="legs__slider" data-slider="slider-legs">
					<div class="swiper swiper--legs">
						<div class="swiper-wrapper">
							{% for item in slidesLegs %}
								<div class="swiper-slide">
									{% include '../../components/legs-item.twig' with {
										item:item,
									} only %}
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
				<a href="legs.html" class="b-btn b-btn--primary">
					<span>Каталог ножек</span>
					<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M3.3335 8H12.6668M12.6668 8L8.66683 4M12.6668 8L8.66683 12" stroke="white"
						      stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
				</a>
			</div>
			<div class="legs__bg">
				<picture>
					<source srcset="images/home/legs/legs.webp 1x, images/home/legs/legs@2x.webp 1.3x"
					        type="image/webp">
					<source srcset="images/home/legs/legs.png 1x, images/home/legs/legs@2x.png 1.3x"
					        type="image/png">
					<img src="images/home/legs/legs.png" width="381" height="536" alt="" loading="lazy">
				</picture>
			</div>
		</div>
	</div>
</div>
