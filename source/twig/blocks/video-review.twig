<section class="video-review section-offset">
	<div class="container">
		<h2 class="section-title video-review__title">
			{{ videoReviewTitle }}
		</h2>
		<div class="video-review__wrapper">
			<a href="{{ videoLink }}" class="glightbox">
				<picture>
					<source media="(min-width:1199px)"
					        srcset="{{ videoImg }}.webp 1x, {{ videoImg }}@2x.webp 1.3x"
					        type="image/webp">
					<source media="(min-width:1199px)"
					        srcset="{{ videoImg }}.jpg 1x, {{ videoImg }}@2x.jpg 1.3x"
					        type="image/jpg">
					<source media="(min-width:767px)"
					        srcset="{{ videoImg }}-tablet.webp 1x, {{ videoImg }}-tablet@2x.webp 1.3x"
					        type="image/webp">
					<source media="(min-width:767px)"
					        srcset="{{ videoImg }}-tablet.jpg 1x, {{ videoImg }}-tablet@2x.jpg 1.3x"
					        type="image/jpg">
					<source srcset="{{ videoImg }}-mob.webp 1x, {{ videoImg }}-mob@2x.webp 1.3x"
					        type="image/webp">
					<source srcset="{{ videoImg }}-mob.jpg 1x, {{ videoImg }}-mob@2x.jpg 1.3x"
					        type="image/jpg">
					<img src="{{ videoImg }}-mob.jpg" width="1169" height="712" alt="" loading="lazy">
				</picture>
			</a>
			<div class="video-btn">
				<svg width="100" height="100" viewBox="0 0 100 100" fill="none"
				     xmlns="http://www.w3.org/2000/svg">
					<circle cx="49.5" cy="49.5" r="49.5" fill="white"/>
					<path d="M64.9002 46.4948C66.3669 47.3416 66.3669 49.4586 64.9002 50.3054L41.8002 63.6421C40.3335 64.4889 38.5002 63.4305 38.5002 61.7369V35.0633C38.5002 33.3697 40.3335 32.3113 41.8002 33.1581L64.9002 46.4948Z"
					      fill="#349FEC"/>
				</svg>
			</div>
		</div>
	</div>
</section>
